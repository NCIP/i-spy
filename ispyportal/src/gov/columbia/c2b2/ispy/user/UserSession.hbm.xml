<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
    <class name="gov.columbia.c2b2.ispy.user.UserSession" table="USER_SESSION">

        <id name="sessionId" type="string" column="SESSION_ID" >           
            <generator class="assigned"/>
        </id>
        <many-to-one name="user"  column="USER_ID" class="gov.columbia.c2b2.ispy.user.WebUser" foreign-key="user">
            <meta attribute="field-description">User associated with this session.</meta>
        </many-to-one>
        
        <property name="lastLoginTime"  column="LASTLOGINTIME" type="timestamp" length="7">
          
        </property> 
         
        <property name="expirationTime" column="EXPIRATIONTIME" type="timestamp" length="7">
            
        </property> 
    </class>
</hibernate-mapping>