<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>
    <class name="gov.columbia.c2b2.ispy.user.Login" table="LOGIN">

        <id name="id" type="long" column="LOGIN_ID">             
            <generator class="increment"/>
        </id>

        <property name="loginDate" type="timestamp" column="LOGINDATE">
             
        </property>
        
        <property name="ipAddress" type="string" length="64" column="IPADDRESS">            
            <meta attribute="field-description">The IP address from which the user connected</meta>
        </property>

        <many-to-one name="user" class="gov.columbia.c2b2.ispy.user.WebUser" column="USER_ID">
            <meta attribute="field-description">The User that logged in.</meta>            
        </many-to-one>

    </class>
</hibernate-mapping>
